#!/usr/bin/env bash

cd ..

writeInFile=true;
distance=75;

for fileSize in {100..10000..100}
do
	for runNum in {1..30}
	do
		if [ "$runNum" -ne 30 ]
		then
			./waf --run "wifi-adhoc-var-file-size-manual-routing --distance=$distance --runNum=$runNum --writeInFile=$writeInFile --fileSize=$fileSize"
		else
			./waf --run "wifi-adhoc-var-file-size-manual-routing --distance=$distance --runNum=$runNum --writeInFile=$writeInFile --fileSize=$fileSize --endLine=true"
		fi
	done
done



